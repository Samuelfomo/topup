{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "views/**/*.vue"
  ],
//  "exclude": [
//    "src/**/__tests__/*"
//  ],
  "exclude": ["node_modules", "dist"],

  "compilerOptions": {
    "composite": true,
    "strict": false,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/*"],
      "@views/*": ["./views/*"]
    }
  }
}
